.side
  .side-header
    .side-header__box
      .side-header__box__user-name 
        = current_user.name
      %ul.side-header__box__icon
        %li.side-header__box__icon__list
          = link_to new_group_path, class:"side-header__box__icon__list__edit" do
            = icon('far', 'edit')
        %li.side-header__box__icon__list
          = link_to edit_user_path(current_user), class:"side-header__box__icon__list__edit" do
            = icon('fa', 'cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__name 
            = group.name
          %p.group__message 
            = group.show_last_message

